{
  "manifest_version": 3,
  "name": "YouTube-Ad Watcher",
  "version": "0.1",
  "permissions": ["activeTab", "scripting"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  "action": { "default_popup": "popup.html" }
}
